{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
      "Jsx/*": ["./jsx/*"]
    },
    "types": ["@adonisjs/core"]
  }
}
